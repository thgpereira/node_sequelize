include ./../../header
    div(class='container')
      table(class='table table-striped table-bordered')
        thead
          tr 
            th(class='id') Id
            th Nome
            th(class='active_registrer') Ativo
            th(class='actions_registrer') Ações
        tbody
          for user in users
            tr
              td #{user.id}
              td #{user.name}
              td(class='active_registrer') #{user.active ? 'Sim' : 'Não'}
              td(class='actions_registrer')
                a(href='user/#{user.id}', title='Editar')
                  img(src='/img/edit.png')
                &nbsp;&nbsp;  
                a(href='user/#{user.id}', title='Excluir')
                  img(src='/img/delete.png')  
        footer(class='footer')
          div(class='container')
            p(class='text-muted') Place sticky footer content here.